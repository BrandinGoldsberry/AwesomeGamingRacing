@model LoginRequest

<h1>New Track</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginRequest.UserName" class="control-label">User Name</label>
                @Html.TextBoxFor(m => m.UserName)
                <span asp-validation-for="LoginRequest.UserName" class="text-danger"></span>
                <br />
                <label asp-for="LoginRequest.Password" class="control-label">Password</label>
                @Html.TextBoxFor(m => m.Password)
                <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>

                @Html.HiddenFor(m => m.ReturnUrl, new { Value = ViewBag.ReturnURl })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        }
    </div>
</div>